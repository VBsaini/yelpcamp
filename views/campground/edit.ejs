<%-  include("../partials/header") %>
<div class="container"> 
	<div class="row">
			<h1 style="text-align:center;">
				edit campground!
			</h1>
			<div style="width:30%; margin: 25px auto">
				<form action = "/campground/<%=campground._id %>?_method=put" method = "post">
					<div class="form-group">
						<input class="form-control" type = "text" name = "camp[name]" value = "<%= campground.name %>">
					</div>
					<div class="form-group">
						<input class="form-control" type = "text" name = "camp[image]" value = "<%= campground.image %>">
					</div>
					<div class="form-group">
						<input class="form-control" type = "text" name = "camp[description]" value = "<%= campground.description %>">
					</div>
					<div class="form-group">
						<input class="form-control" type = "number" name = "camp[price]" value = "<%= campground.price %>" min="1" step="1">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">
							submit!
						</button>
					</div>
				</form>
				<a href = "/campground">Go Back</a>
			</div>
	</div>
</div>
<%-  include("../partials/footer") %>